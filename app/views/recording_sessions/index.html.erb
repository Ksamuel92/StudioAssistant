<h1 class="text-center display-1">Your Sessions</h1>
<% if flash[:error]%>
    <h6><%= flash[:error]%></h6>
<% end %>
<% if @recording_sessions != [] %>
   <h2 class="text-center">Hi <%= current_user.name %>! Here are your sessions</h2>
    <table class="table table-bordered table-hover"> 
    <caption>List of sessions</caption>
    <thead>
    <tr>
      <th scope="col">Client</th>
      <th scope="col">Start Date</th>
      <th scope="col">Genre</th>
      <th scope="col">Session Options</th>
    </tr>
  </thead>    
      <tbody>      
        <%@recording_sessions.all.each do |session|%>
      <% if session.is_session_today? %> <tr class ="table-danger"> <% else %> <tr> <% end%>
      <th scope="row"><%= session.client.name %></th>
      <td><%= session.start_date %></td>
      <td><%= session.genre %></td>
      <td><a href="/recordingsessions/<%= session.client.slug %>/<%= session.id %>"> View Your Session </a>
      <a href="/recordingsessions/<%= session.client.slug %>/<%= session.id %>/edit">Edit Your Session</a>
      <form method="post" action="/recordingsessions/<%= session.client.slug %>/<%= session.id %>/delete">
      <input type="hidden" name="_method" value="delete">
       <input type="submit" value = "Delete This Session">
      <% end %>
    </tbody>
</table>

                 
<% else %>
    <p class="text-center lead"> Create a new session below</p>
<% end %>


   
        <% if @clients != [] %> 
        Or book a new session with a current client! </li>
        <%@clients.each do |client|%>
        <a href= "/recordingsessions/<%= client.slug %>/new"><button type="button" class= "btn btn-primary"><%= client.name%> - <%= client.email%></button></a>
        <% end %>
            <% end %>
        <div class="text-center m-1">
        <a href="/recordingsessions/new"><button type="button" class ="btn btn-primary">New Session</button></a>
        <a href="/logout"><button type="button" class = "btn btn-primary">Log Out</button></a>
       </div>
