<div class="form-group">
    <form method="POST" action="/recordingsessions/<%= @client.slug %>/<%= @recording_session.id %>">
    <input type="hidden" name="_method" value="PATCH">
    <div id="edit-session">
        <ul>
            <li><label for= "client_name">Client Name:</label></li>
            <li><input type="text" name="client[name]" id="client_name" value = "<%= @client.name %>" ></li></br>
            <li><label for= "client_email">Client Email:</label></li>
            <li><input type="text" name="client[email]" id="client_email" value = "<%= @client.email %>"></li></br>
