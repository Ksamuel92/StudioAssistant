            <li><input type="text" name="client[genre]" id="client_genre" value = "<%= @client.genre %>"></li></br>
            <li><label for= "client_budget">Client Budget:</label></li>
            <li><input type="text" name="client[budget]" id="client_budget" value = "<%= @client.budget %>"></li></br>
            <li><label for = "start_date">Start Date: </label></li>
            <li><input type="date" name="recording_session[start_date]" id="start_date" value = "<%= @recording_session.start_date %>"></li></br>
            <li><label for = "end_date">End Date:</label></li>
            <li><input type="date" name="recording_session[end_date]" id="end_date" value = "<%= @recording_session.start_date %>"></li></br>
            <li><label for = "per_hour"> Rate Per Hour: $</label></li>
            <li><input type="text" name="recording_session[per_hour]" id="per_hour" value = "<%= @recording_session.per_hour %>"></li></br>
            <li><label for = "hours_per_day"> Hours Per Day:</label></li>
            <li><input type="text" name="recording_session[hours_per_day]" id="hours_per_day" value = "<%= @recording_session.hours_per_day %>"></li></br>
        </ul>
    </div>
    </br>
