<div class="form-group">
    <form method="POST" action="/users/<%= @user.slug%>">
        <input type="hidden" name="_method" value="patch">
        <label for= "name">Name</label>
        <input type="text" class="form-control" name="user[name]" id="name" value= "<%=@user.name%>"></br>
        <label for = "email">Email</label>
        <input type="text" class = "form-control" name= "user[email]" id="email" value= <%=@user.email%>></br>
        <label for = "location">Location</label>
        <input type="text" class ="form-control" name= "user[location]" id="location" value= "<%=@user.location%>"></br>
        <button type="submit" class = "btn btn-primary">Edit Profile</button>
    </form>
</div>