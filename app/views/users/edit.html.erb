<div class="form-group">
    <form method="POST" action="/users/<%= @user.slug%>">
    <input type="hidden" name="_method" value="patch">
        <label for= "name">*Name:</label>
        <input type="text" name="user[name]" id="name" value= "<%=@user.name%>"></br>
        <label for = "location">Location:</label>
        <input type="text" name="user[location]" id="location" value= "<%=@user.location%>"></br>
        <label for = "email">*Email:</label>
        <input type="text" name="user[email]" id="email" value= <%=@user.email%>></br>
        <input type="submit" value = "Edit Account">
    </form>
</div>